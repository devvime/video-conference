<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Susumo Meet</title>
    <link rel="icon" type="image/x-icon" href="https://cloud.susumo.com.br/images/susumo/logo/icon.png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="dist/css/meet.min.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  </head>
  <body class="bg-dark text-light">
    <main>
      <div class="container-fluid">
        <div class="row py-2">
          <div class="col-11">
            <p class="d-flex"><i class="material-icons">&#xe7fd;</i> Pessoas na reuni√£o: <span id="participant">0</span></p>
          </div>
          <div class="col-1 text-right">
            <button class="btn btn-danger d-flex" id="power" onclick="leaveMeeting()"><i class="material-icons">power_settings_new</i></button>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div id="form">
              <div class="row">
                <div class="col-md-8">
                  <video id="main-video" title="Double click to display fullscreen." ondblclick="fullscreen()" autoplay muted></video>
                  <div class="commands">
                    <div class="command-btn" id="audioControl" onclick="muteUnmute()">
                      <i class="material-icons">&#xe029;</i>
                      <p class="label">Mic</p>
                    </div>
                    <div class="command-btn" id="videoControl" onclick="playStop()">
                      <i class="material-icons">videocam</i>
                      <p class="label">Cam</p>
                    </div>
                    <div class="command-btn" id="shareControl" onclick="shareScreen()">
                      <i class="material-icons">&#xe0df;</i>
                      <p class="label" id="shareText">Share</p>
                    </div>
                    <div class="command-btn" id="recordControl" onclick="recordMeeting()">
                      <i class="material-icons">&#xe061;</i>
                      <p class="label">Record</p>
                    </div>
                  </div>
                </div>
                <div class="col-md-1">
                  <div id="video-grid"></div>
                </div>
                <div class="col-md-3 pt-0">
                  <div id="right-content" class="chat">
                    <div class="active"></div>
                    <div id="chatroom"><p class="text-dark text-center"><strong>Chat</strong></p></div>
                    <div id="chatform" class="d-flex align-items-center">
                      <label class="btn d-flex">
                        <input type="file" id="file" style="display: none;" onchange="selectFile(this.value)">
                        <i class="material-icons">&#xe226;</i>
                      </label>
                      <input id="textchat" type="text" placeholder="Type here ..." class="form-control" style="margin-right: 5px;">
                      <button class="btn btn-dark d-flex" id="sendMessage">
                        <i class="material-icons">&#xe315;</i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <script>
        const ROOM_ID = "<%= roomId %>";
        const USERNAME = "<%= username %>";
    </script>
    <script src="js/main.js"></script>
    <script src="js/webrtc-controller.js"></script>
  </body>
</html>